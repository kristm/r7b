  <div id="<%= dom_id article %>">
    <p>
      <%= article.title %>
    </p>

    <p>
      <%= article.author %>
    </p>

    <strong>Comments</strong>
    <dl>
      <% article.comments.each do |comment| %>
        <dt><%= comment.author %>
        <dd><%= comment.comment %>
      <% end %>
    </dl>
    <%= link_to 'New comment', new_article_comment_path(article) %>
  </div>
