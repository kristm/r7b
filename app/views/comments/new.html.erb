<%= form_with model: [@article, @comment] do |f| %>
  <% if @comment.errors.any? %>
    <ul class="errors">
    <% @comment.errors.full_messages.each do |errors| %>
      <li><%= errors %></li>
    <% end %>
    </ul>
  <% end %>
  <p>
    <%= f.label :comment %>
    <%= f.text_field :comment %>
  </p>
  <p>
    <%= f.label :author %>
    <%= f.text_field :author %>
  </p>
  <%= f.submit %>
<% end %>
